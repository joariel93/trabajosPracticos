#include <stdio.h>
#include <stdlib.h>
#include "utn.operaciones.h"

int main (void){
float firstNumber;
float secondNumber;
float sumResult;
float subtractionResult;
float multiplicationResult;
float divisionResult;
float factorialResultA;
float factorialResultB;

float utn_pideDosNumeros(&firstNumber,&secondNumber;
float utn_sumar(float firstNumber,float secondNumber,float *sumResult);
float utn_restar(float firstNumber,float secondNumber,float *subtractionResult);
float utn_multiplicar(float firstNumber,float secondNumber,float *multiplicationResult);
if(secondNumber!=0)
{
	float utn_dividir(float firstNumber,float secondNumber,float *divisionResult);
}
float utn_factorizar2Numeros(float firstNumber,float secondNumber,float *factorialResultA,float *factorialResultB);

printf("Los números ingresados han sido: %.2f y %.2f\n",&firstNumber,&secondNumber);
printf("La suma de los números es: %.2f\n",&sumResult);
printf("La resta del primero con el segundo es: %.2f\n",&subtractionResult);
printf("La mulitplicacion de ambos números es: %.2f\n",&multiplicationResult);
if(secondNumber==0)
{
	printf("No es posible dividir por cero.\n");
}
else
{
	printf("La división del primer numero por el segundo es: %.2f\n",&divisionResult);
}
printf("El factorial del primer número es: %.2f y del segundo es: %.2f\n",&factorialResultA,&factorialResultB);
return 0;
}
